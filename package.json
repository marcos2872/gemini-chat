{
  "name": "ia-chat",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main/boot/main.js",
  "scripts": {
    "start": "npm run build:main && electron .",
    "dev": "rm -rf dist && concurrently -k \"cross-env IS_DEV=true vite\" \"npm run build:main -- -w\" \"wait-on http://localhost:3000 dist/main/boot/main.js && cross-env IS_DEV=true electron .\"",
    "build:main": "tsc -p tsconfig.main.json",
    "build": "npm run build:main && vite build",
    "dist": "npm run build && electron-builder",
    "watch": "vite build --watch",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json,md}\"",
    "prepare": "husky"
  },
  "build": {
    "appId": "com.iachat.app",
    "productName": "IA-Chat",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "logos/**/*",
      "package.json"
    ],
    "linux": {
      "target": "AppImage",
      "icon": "logos/logo.png",
      "category": "Utility"
    },
    "win": {
      "target": "nsis",
      "icon": "logos/logo.ico"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/electron-store": "^1.3.1",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "google-auth-library": "^10.5.0",
    "open": "^11.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "uuid": "^13.0.0"
  }
}
